<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    >

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_background"
    android:padding="1dp"
    >

    <TextView
        android:id="@+id/tv_delect2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/selector_list_clicked"
        android:clickable="true"
        android:padding="4dp"
        android:text="删除该条"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_phone_num10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_phone_num10" />

    <TextView
        android:id="@+id/tv_alarm_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="队/组/路"
        app:layout_constraintBottom_toBottomOf="@+id/tv_input_group"
        app:layout_constraintStart_toStartOf="@+id/tv_phone_num4"
        app:layout_constraintTop_toTopOf="@+id/tv_input_group" />

    <TextView
        android:id="@+id/tv_phone_num10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="信息录入"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_add_subitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="添加分支"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_input_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="请输入队/组/路"
        android:padding="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_input_owner"
        app:layout_constraintStart_toStartOf="@+id/edit_input_owner"
        app:layout_constraintTop_toBottomOf="@+id/view6" />

    <EditText
        android:id="@+id/tv_input_door"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="请输入门牌号"
        android:inputType="number"
        android:padding="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_input_owner"
        app:layout_constraintStart_toStartOf="@+id/edit_input_owner"
        app:layout_constraintTop_toBottomOf="@+id/tv_input_group" />

    <EditText
        android:id="@+id/edit_input_owner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="请输入实体名称"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_phone_num4"
        app:layout_constraintTop_toBottomOf="@+id/tv_input_door" />


    <ImageView
        android:id="@+id/img_reserve"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:src="@drawable/select_check_select"
        app:layout_constraintStart_toStartOf="@+id/edit_input_owner"
        app:layout_constraintTop_toBottomOf="@+id/edit_input_owner" />
    
    <TextView
        android:id="@+id/tv_phone_num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="门牌号"
        app:layout_constraintBottom_toBottomOf="@+id/tv_input_door"
        app:layout_constraintStart_toStartOf="@+id/tv_phone_num4"
        app:layout_constraintTop_toTopOf="@+id/tv_input_door" />

    <TextView
        android:id="@+id/tv_phone_num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="实体名称"
        app:layout_constraintBottom_toBottomOf="@+id/edit_input_owner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_input_owner" />

    <TextView
        android:id="@+id/tv_phone_num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否预留"
        app:layout_constraintBottom_toBottomOf="@+id/img_reserve"
        app:layout_constraintStart_toStartOf="@+id/tv_phone_num4"
        app:layout_constraintTop_toTopOf="@+id/img_reserve" />

    <TextView
        android:id="@+id/tv_phone_num2"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="(勾选后不会制牌)"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_reserve"
        app:layout_constraintStart_toEndOf="@+id/img_reserve"
        app:layout_constraintTop_toTopOf="@+id/img_reserve"
        app:layout_constraintVertical_bias="0.545" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="保存"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@+id/view7" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        app:layout_constraintBottom_toBottomOf="@+id/btn_save"
        app:layout_constraintEnd_toStartOf="@+id/btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_reserve"
        app:layout_constraintTop_toTopOf="@+id/btn_save"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@color/btnPressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_num10" />

    <View
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@color/btnPressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln_subitem" />

    <LinearLayout
        android:id="@+id/ln_subitem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_num5"></LinearLayout>
</android.support.constraint.ConstraintLayout>
</ScrollView>